@page
@model IdentityProvider.Duende.Pages.Account.ResetPassword.ResetPasswordModel
@{
}

<h1>Reset Password</h1>

<div class="row">
    <div class="col-md-4">
        <form asp-page="/Account/ResetPassword/ResetPassword" method="post">
            <input asp-for="ReturnUrl" type="hidden"/>
            <partial name="_ValidationSummary" />
            <div class="form-group">
                <label asp-for="Input.Password" class="control-label"></label>
                <input asp-for="Input.Password" class="form-control" autocomplete="off"/>
                <span asp-validation-for="Input.Password" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Input.ConfirmPassword" class="control-label"></label>
                <input asp-for="Input.ConfirmPassword" class="form-control" autocomplete="off"/>
                <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
            </div>
            <input asp-for="Input.Email" type="hidden" class="form-control" />
            <input asp-for="Input.Token" type="hidden" class="form-control" />
            <div class="form-group">
                <button type="submit" class="btn btn-primary">Reset</button>
            </div>
        </form>
    </div>
</div>