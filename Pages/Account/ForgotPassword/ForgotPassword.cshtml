@page
@model IdentityProvider.Duende.Pages.Account.ForgotPassword.ForgotPasswordModel
@{
}

<h2>Forgot Password</h2>
<hr />

<div class="row">
    <div class=" col-md-4">
        <form asp-page="Account/ForgotPassword/ForgotPassword" method="post">
            <input asp-for="ReturnUrl" hidden/>
            <div class="form-group">
                <label class="control-label" asp-for="Input.Email"></label>
                <input class="form-control" asp-for="Input.Email" />
                <span class="text-danger" asp-validation-for="Input.Email"></span>
            </div>
            <div class="form-group">
                <button type="submit" class="btn btn-primary">Submit</button>
            </div>
        </form>
    </div>
</div>
